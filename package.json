{
  "name": "@blabbing/signals",
  "version": "0.0.1",
  "description": "A reactive state management tool",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/signals.d.ts",
        "default": "./dist/signals.umd.cjs"
      },
      "import": {
        "types": "./dist/signals.d.ts",
        "default": "./dist/signals.js"
      }
    },
    "./react": {
      "require": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.umd.cjs"
      },
      "import": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.js"
      }
    },
    "./immer": {
      "require": {
        "types": "./dist/immer.d.ts",
        "default": "./dist/immer.umd.cjs"
      },
      "import": {
        "types": "./dist/immer.d.ts",
        "default": "./dist/immer.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "signals",
    "transaction",
    "state"
  ],
  "scripts": {
    "prepare": "vite build",
    "test": "./scripts/run-tests",
    "test:unit": "vitest",
    "test:lint": "eslint src --color",
    "test:fmt": "prettier --check src",
    "print-pkg-version": "echo ${npm_package_version}",
    "release:candidate": "./scripts/publish-rc",
    "release:stable": "./scripts/publish-stable"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^9.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "immer": "^10.1.1",
    "jsdom": "^26.0.0",
    "keep-a-changelog": "^2.5.3",
    "prettier": "^3.1.0",
    "react": "^19.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "signal-polyfill": "^0.1.1"
  },
  "peerDependencies": {
    "immer": ">=10.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "immer": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "$schema": "https://json.schemastore.org/package"
}
