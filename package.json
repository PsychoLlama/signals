{
  "name": "@pl-beta/signals",
  "version": "0.0.0-rc.1",
  "description": "A reactive state management tool",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/signals.d.ts",
      "require": "./dist/signals.umd.cjs",
      "import": "./dist/signals.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.umd.cjs",
      "import": "./dist/react.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "signals",
    "transaction",
    "state"
  ],
  "scripts": {
    "prepare": "vite build",
    "test": "./bin/run-tests",
    "test:unit": "vitest",
    "test:lint": "eslint src --color",
    "test:fmt": "prettier --check src"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "react": "^18.3.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.0.4",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "signal-polyfill": "^0.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
